<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="FrontGridDataProvider" type="Order\FrontController\Ui\DataProvider\Grid">
        <arguments>
            <argument name="collection" xsi:type="object">Order\FrontController\Model\ResourceModel\Front\Collection</argument>
        </arguments>
    </virtualType>
    <virtualType name="FrontFormDataProvider" type="Order\FrontController\Ui\DataProvider\EditForm">
        <arguments>
            <argument name="collection" xsi:type="object">Order\FrontController\Model\ResourceModel\Front\Collection</argument>
        </arguments>
    </virtualType>
    <virtualType name="FrontFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
</config>